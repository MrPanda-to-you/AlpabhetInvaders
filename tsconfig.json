{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
  "lib": ["ES2022", "DOM"],
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
  "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@systems/*": ["src/systems/*"],
      "@ui/*": ["src/ui/*"],
      "@assets/*": ["assets/*"]
  },
  "resolveJsonModule": true
  },
  "include": ["src", "index.html"],
  "exclude": ["node_modules", "dist"]
}
